        </div>

        <!-- The Honest Truth Section -->
        <section class="mb-16">
            <h2 class="mb-6 text-center text-2xl font-bold text-[var(--color-text-primary)]">
                The honest truth about the trial
            </h2>
            <div class="rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-6">
                <p class="mb-4 text-[var(--color-text-secondary)]">
