        <!-- Hero -->
        <header class="mb-16 text-center">
            <h1 class="mb-4 text-4xl font-bold tracking-tight text-[var(--color-text-primary)] md:text-5xl">
                One price. Forever yours.
            </h1>
            <p class="text-lg text-[var(--color-text-secondary)]">
