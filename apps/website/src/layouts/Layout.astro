---
interface Props {
    title: string
    description?: string
}

const {
    title,
    description = 'The AI-native file manager. Rename files with natural language, search by describing what you need, and navigate with keyboard-first controls.',
} = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="theme-color" content="#0a0a0b" />

        <!-- Open Graph -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://getcmdr.com" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- Preload self-hosted font for faster FCP -->
        <link rel="preload" as="font" type="font/woff2" href="/fonts/inter-latin-variable.woff2" crossorigin />

        <title>{title}</title>
    </head>
    <body class="min-h-screen">
        <slot />
    </body>
</html>

<style is:global>
    @import '../styles/global.css';
</style>
