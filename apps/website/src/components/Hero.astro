<section class="relative flex min-h-screen items-center justify-center overflow-hidden px-6 pt-16">
    <!-- Background gradient -->
    <div
        class="pointer-events-none absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(99,102,241,0.15),transparent)]"
    >
    </div>

    <!-- Grid pattern overlay -->
    <div
        class="pointer-events-none absolute inset-0 bg-[linear-gradient(var(--color-border-subtle)_1px,transparent_1px),linear-gradient(90deg,var(--color-border-subtle)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_60%_at_50%_50%,black,transparent)]"
    >
    </div>

    <div class="relative z-10 mx-auto max-w-4xl text-center">
        <!-- Badge -->
        <div
            class="animate-fade-in-up mb-8 inline-flex items-center gap-2 rounded-full border border-[var(--color-border)] bg-[var(--color-surface)] px-4 py-1.5 opacity-0"
        >
            <span class="h-2 w-2 animate-pulse rounded-full bg-[var(--color-accent)]"></span>
            <span class="text-sm text-[var(--color-text-secondary)]">AI-powered file management</span>
        </div>

        <!-- Headline -->
        <h1
            class="animate-fade-in-up delay-100 mb-6 text-5xl font-bold leading-tight tracking-tight opacity-0 md:text-7xl"
        >
            Talk to your files.
            <br />
            <span class="gradient-text">They'll listen.</span>
        </h1>

        <!-- Subheadline -->
        <p
            class="animate-fade-in-up delay-200 mx-auto mb-10 max-w-2xl text-lg text-[var(--color-text-secondary)] opacity-0 md:text-xl"
        >
            Rename files with natural language. Search by describing what you're looking for. The AI-native file manager
            for power users who want superpowers.
        </p>

        <!-- CTA Buttons -->
        <div class="animate-fade-in-up delay-300 flex flex-col items-center justify-center gap-4 opacity-0 sm:flex-row">
            <a
                href="#download"
                class="glow inline-flex items-center gap-2 rounded-xl bg-[var(--color-accent)] px-8 py-4 text-lg font-semibold text-white transition-all duration-300 hover:scale-105 hover:bg-[var(--color-accent-hover)]"
            >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                        d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
                    ></path>
                </svg>
                Try free for 14 days
            </a>
            <a
                href="https://github.com/vdavid/cmdr"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] px-8 py-4 text-lg font-semibold transition-all duration-300 hover:border-[var(--color-text-tertiary)] hover:bg-[var(--color-surface-elevated)]"
            >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
