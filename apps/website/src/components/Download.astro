<section id="download" class="relative px-6 py-32">
    <!-- Background glow -->
    <div
        class="pointer-events-none absolute inset-0 bg-[radial-gradient(ellipse_50%_50%_at_50%_100%,rgba(99,102,241,0.1),transparent)]"
    >
    </div>

    <div class="relative mx-auto max-w-4xl text-center">
        <h2 class="mb-4 text-4xl font-bold md:text-5xl">Ready to try Cmdr?</h2>
        <p class="mb-10 text-lg text-[var(--color-text-secondary)]">7-day free trial. No credit card required.</p>

        <!-- Download card -->
        <div
            class="mx-auto max-w-md rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)] p-8 transition-all duration-300 hover:border-[var(--color-accent)]/30"
        >
            <div class="mb-6 flex items-center justify-center gap-4">
                <svg class="h-12 w-12 text-[var(--color-text-secondary)]" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path
                        d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
                    ></path>
                </svg>
                <div class="text-left">
                    <div class="font-semibold">macOS</div>
                    <div class="text-sm text-[var(--color-text-tertiary)]">Universal (Apple Silicon + Intel)</div>
                </div>
            </div>

            <a
                href="https://github.com/vdavid/cmdr/releases/latest"
                target="_blank"
                rel="noopener noreferrer"
                class="glow mb-4 inline-flex w-full items-center justify-center gap-2 rounded-xl bg-[var(--color-accent)] px-8 py-4 font-semibold text-white transition-all duration-300 hover:scale-[1.02] hover:bg-[var(--color-accent-hover)]"
            >
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Download free trial
            </a>

            <div class="space-y-2 text-sm text-[var(--color-text-tertiary)]">
                <p><strong class="text-[var(--color-text-secondary)]">$29</strong> one-time purchase after trial</p>
                <p>Open source Â· AGPL-3.0 license</p>
            </div>
        </div>

        <!-- Other platforms -->
        <p class="mt-8 text-[var(--color-text-tertiary)]">
            Windows and Linux coming soon.
            <a href="https://github.com/vdavid/cmdr" class="text-[var(--color-accent)] underline underline-offset-2 hover:text-[var(--color-accent-hover)]"
                >Star on GitHub</a
            > to get notified.
        </p>
    </div>
</section>
